<!doctype html>
<!--[if lt IE 7]> <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang="en"> <![endif]-->
<!--[if IE 7]>    <html class="no-js lt-ie9 lt-ie8" lang="en"> <![endif]-->
<!--[if IE 8]>    <html class="no-js lt-ie9" lang="en"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>tapes.fm</title>
  <meta name="description" content=""> 
  <meta name="viewport" content="width=1050">

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "http://js.pusher.com/1.12/pusher.min.js" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
  <p class="alert"><%= alert %></p>
  <header> 
    <div id="h_box" class="container_12">
      <div class="logo">
        <div class="dropdown">
          <a href="/projects">
            <div class="header_button one">Getting Started</div>
            <div class="header_button two">About</div>
            <div class="header_button three">FAQ</div>
            <div class="header_button four">Blog</div>
            <div class="header_button five">Legals</div>
          </a> 
        </div>
      </div>
      <div id="quick_buttons">
        <a href="/dashboard">
          <div id="to_dash" class="quick_button tip_header <%=  "active "if request.path == "/dashboard"%>" title="Dashboard">
            
            <div class="shadow_el"> </div>
          </div>
        </a>
        <a href="/tapes">
          <div id="to_tapes" class="quick_button tip_header <%=  "active "if request.path == "/tapes"%>" title="Tapes">
            <div class="shadow_el"> </div>
          </div>
        </a>
        <a href="/explore">
          <div id="to_listen" class="quick_button tip_header <%=  "active "if request.path == "/explore"%>" title="Explore">
            <div class="shadow_el"> </div>
          </div>
        </a>

        <div id="search">
          
          <div id="search_box">
            <form>
            <p>
            <label for="search_field">Search for @users or #tapes</label>
            <input type="text" name="search" id="search_field" value="">
            </p>
            </form>
          </div>
        <div id="search_button" class="quick_button"></div>
          
        </div>


      <% if current_user %> 
      <div id="user_info">
          <a href="/user/<%= current_user.id unless current_user.blank?%>">
        <div class="user_image"> 
            <% if current_user.picture.m.url%>
            <img class="image" src="<%= "http://"+current_user.picture.m.url%>">
        <% end %>
          <div class="shadow_el"> </div>
        </div>
          </a>
          
        <div class="user_set"> 
          <div class="user_name"> 
            Hey,
            <a href="/user/<%= current_user.id unless current_user.blank?%>">
              <%= current_user.name unless current_user.blank?%>
            </a>
          </div>
 
            <div class="badge"> <%= "SUPREME" %> </div>
        <div class="user_bar ">
          <div class="min_bar" data-used_time="<%= current_user.upload_min%>" data-total_time="<%= current_user.plan[:minutes]%>">
          </div>
        
        </div>
        <div class="dropdown"> 
          <div class="minutes"> 
            <div class="minutes_used"> <%= current_user.upload_min%> min </div>
            <div class="minutes_total"> <%= current_user.plan[:minutes] %> min</div>

          </div>
          <a href="/settings">
            <div class="header_button one"> Settings</div>
          </a>
          <a href="/user/<%=current_user.id unless current_user.blank?%>">
            <div class="header_button two">Profile</div>
          </a>
          <a href="/logout">
            <div class="header_button three"> Logout</div>
          </a>
          
        </div>
        </div>
      </div>
      <% else %>
      <div id="user_login">
        <a href="/login">Login</a>
        or
        <a href="/users/sign_up">Join</a>
        for free 
      </div>
      <% end %>
      </div>
    </div>
  </header>
  
  <% if notice %>
    
    <div class="flash"><%= notice %></div>
  <% end %>

  <% if alert %>
    <div class="flash"><%= alert %></div>
  <% end %>

    <%= yield %> 
  
    <footer> </footer>
  <script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-36856509-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  <script>  
    Tapesfm.settings = {}
    Tapesfm.settings.bucket = "<%=ENV['s3_bucket_name']%>"
  </script>
</body>
</html>
