<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>tapes.fm</title>
  <meta name="description" content=""> 
  <meta name="viewport" content="width=device-width">

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "http://js.pusher.com/1.12/pusher.min.js" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <!--[if lt IE 7]><p class=chromeframe>Your browser is <em>ancient!</em> <a href="http://browsehappy.com/">Upgrade to a different browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to experience this site.</p><![endif]-->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <header> 
    <div id="h_box" class="container_12">
      <div class="logo">
      </div>
      <div id="quick_buttons">
        <a href="/dashboard">
          <div id="to_dash" class="quick_button tip_header" title="Dashboard">
            <div class="shadow_el"> </div>
          </div>
        </a>
        <a href="/tapes">
          <div id="to_tapes" class="quick_button tip_header" title="Tapes">
            <div class="shadow_el"> </div>
          </div>
        </a>
        <a href="/explore">
          <div id="to_listen" class="quick_button tip_header" title="Listen">
            <div class="shadow_el"> </div>
          </div>
        </a>

        <div id="search">
          
          <div id="search_box">
            <form>
            <p>
            <label for="search_field">Search for artist, bands and tracks</label>
            <input type="text" name="search" id="search_field" value="">
            </p>
            </form>
          </div>
        <div id="search_button" class="quick_button"></div>
          
        </div>


      <% if current_user %> 
      <div id="user_info">
        <div class="user_image"> 
          <div class="shadow_el"> </div>
        </div>
          
        <div class="user_set"> 
          <div class="user_name"> 
            Hey,
            <%= current_user.name unless current_user.blank?%>
          </div>
          <a href="/logout">
            <div class="user_logout"> </div>
          </a>
        </div>
        <div title="123 / 300 min" class="user_bar min_tip">
          <div class="min_bar">
          </div>
        
        </div>
      </div>
      <% else %>
      <div id="user_login">
        <a href="/login">Login</a>
        or
        <a href="/users/sign_up">Join</a>
        for free 
      </div>
      <% end %>
      </div>
    </div>
  </header>
  
    <%= yield %> 
  
    <footer> </footer>
  <script>
    var _gaq=[['_setAccount','UA-XXXXX-X'],['_trackPageview']];
    (function(d,t){var g=d.createElement(t),s=d.getElementsByTagName(t)[0];
    g.src=('https:'==location.protocol?'//ssl':'//www')+'.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g,s)}(document,'script'));
  </script>

</body>
</html>
