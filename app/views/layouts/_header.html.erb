  <header> 
    <div id="h_box" class="container_12">
      <div class="logo">
        <div class="dropdown">
          <a href="/">
            <div class="home_btn"></div>
          </a> 
        <% if current_user%>
          <a href="/start">
            <div class="header_button one">Getting Started</div>
          </a> 
          <a href="/about">
            <div class="header_button two">About</div>
          </a> 
          <a href="/faq">
            <div class="header_button three">FAQ</div>
          </a> 
          <a href="http://blog.tapes.fm">
            <div class="header_button four">Blog</div>
          </a> 
          <a href="/terms">
            <div class="header_button five">Terms of Service</div>
          </a> 
          <%end%>
        </div>
      </div>
      <% if current_user %> 
      <div id="quick_buttons">
        <a href="/dashboard">
          <div id="to_dash" class="quick_button tip_header <%=  "active "if request.path == "/dashboard"%>" title="Dashboard">
            
            <div class="shadow_el"> </div>
          </div>
        </a>
        <a href="/explore">
          <div id="to_listen" class="quick_button tip_header <%=  "active "if request.path == "/explore"%>" title="Explore">
            <div class="shadow_el"> </div>
          </div>
        </a>
        <a href="/tapes">
          <div id="to_tapes" class="quick_button tip_header <%=  "active "if request.path == "/tapes"%>" title="Tapes">
            <div class="shadow_el"> </div>
          </div>
        </a>

          <div id="to_tracks" class="quick_button tip_header" title="">
            <div class="shadow_el"> </div>
            <div id="user_tracks"> 
                    
          
              <div class="headline"> 
              <div class="icon"> </div> 
              <div class="title"> Your Tracks </div> 
              </div>
              
              <ul id="user_track_list" class="track_list"> 
                <a href="/tapes">
                  <li class="empty"> Start Uploading Tracks to your Tapes </li>
                </a>
              </ul>
            
            </div> 
          </div>

        <div id="search">
          
          <div id="search_box">
            <p>
            <label id="search_label" for="search_field">Search for tags</label>
            <input type="text" name="search" id="search_field" value="">
            </p>
            <ul id="search_results">

            </ul>
          </div>
        <div id="search_button" class="quick_button"></div>
          
        </div>


      <div id="user_info">
          <a href="/user/<%= current_user.id unless current_user.blank?%>">
        <div class="user_image"> 
            <% if current_user.picture.m.url%>
            <img class="image" src="<%= "http://"+current_user.picture.m.url%>">
        <% end %>
          <div class="shadow_el"> </div>
        </div>
          </a>
          
        <div class="user_set"> 
          <div class="user_name"> 
            Hey,
            <a href="/user/<%= current_user.id unless current_user.blank?%>">
              <%= current_user.name unless current_user.blank?%>
            </a>
          </div>
 
          <% if false #current_user.plan_id == 1 || current_user.plan_id.blank? %>
            <a href="/upgrade">
              <div id="badge" class="header_badge upgrade">  
            <div class="name">  
              UPGRADE 
            </div>
              
            </div>
            </a>

          <% elsif false %>
            <a href="/upgrade">

            <div id="badge" class="header_badge badge <%= current_user.plan[:name].downcase %> min_tip" title="<%= current_user.plan_expire ? ("Expires in " + (current_user.plan_expire - Date.today).to_i.to_s) + " days": "" %> "> 
            <div class="name">  
              <%= current_user.plan[:name] %> 
            </div>
  
            </div>
            </a>



          <% end %>


        <a href="/upgrade">

        <div class="user_bar <%= current_user.plan[:name].downcase %>">
          <div class="min_bar" data-used_time="<%= current_user.upload_min%>" data-total_time="<%= current_user.plan[:minutes]%>">
          </div>
        
        </div>
        </a>
        <div class="dropdown"> 
          <div class="minutes <%= current_user.plan[:name].downcase %>"> 
            <div class="minutes_used"> <%= current_user.upload_min%> min </div>
            <div class="minutes_total"> <%= current_user.plan[:minutes] %> min</div>

          </div>
          <a href="/settings">
            <div class="header_button one"> Settings</div>
          </a>
          <a href="/user/<%=current_user.id unless current_user.blank?%>">
            <div class="header_button two">Profile</div>
          </a>
          <a href="/logout">
            <div class="header_button three"> Logout</div>
          </a>
          
        </div>
        </div>
      </div>
      <% else %>
      <div id="user_login">
        <a href="/">Join</a>
        or
        <a href="/login">Login</a>
         
      </div>
      <% end %>
      </div>

    
    </div>
  </header>

